<!DOCTYPE html>
<html ng-app="TodoListApp">

<head>
  <title>TODO List</title>
  <!-- AngularJS -->
  <script src="/javascripts/angular.js"></script>
  <script src="/javascripts/app.js"></script>
  <script src="/javascripts/services/api-service.js"></script>
  <script src="/javascripts/angular-drag-and-drop-lists.js"></script>

  <!-- Google Fonts -->
  <link rel="stylesheet" href="http://fonts.googleapis.com/css?family=Ubuntu:300,400,500" />
  <!-- Google Fonts -->
  <link rel="stylesheet" href="http://fonts.googleapis.com/css?family=Open+Sans:300,400,600,700" />
  <!-- Font Awesome -->
  <link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css" />
  <!--<link rel="stylesheet" href="normalize.css" />-->
  <link rel='stylesheet' href='/stylesheets/style.css' />

  <link rel="stylesheet" href="http://code.jquery.com/ui/1.10.4/themes/smoothness/jquery-ui.css">
  <script src="http://code.jquery.com/jquery-1.9.1.js"></script>
  <script src="http://code.jquery.com/ui/1.10.4/jquery-ui.js"></script>


  <script src="http://code.jquery.com/jquery-1.9.1.js"></script>
  <script src="http://code.jquery.com/ui/1.10.4/jquery-ui.js"></script>
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap.min.css">
</head>

<body ng-controller="TodoListCtrl" ng-init="init('<%= JSON.stringify() %>')">

  <div class="row">
    <div class="col-md-3 center-block">
      <h1 class="register-header">Stwórz konto Tasker</h1>

      <form action="/registerUser" method="post">
        <form-group class="reg-form">
          <label for="">Nazwa</label>
          <input type="text" class="form-control" name="username" placeholder="np. Jan Kowalski">
        </form-group>

        <form-group class="reg-form">
          <label for="">Email</label>
          <input type="text" class="form-control" name="email" placeholder="np. jan.kowalski@gmail.com">
        </form-group>

        <form-group class="reg-form">
          <label for="">Hasło</label>
          <input type="password" class="form-control" name="password" placeholder="np. ********">
        </form-group>

        <form-group class="reg-form">
          <label for="">Wprowadź ponownie hasło</label>
          <input type="password" class="form-control" name="confirmPassword" placeholder="np. ********">
        </form-group>

        <button type="submit" class="btn btn-reg">Zarejestruj się</button>
      </form>
    </div>
  </div>

  <div class="row infoLogin">
    <div class="col-md-2 center-block">
      <p>Posiadasz już konto? <a href="/login" tabindex="0">Zaloguj się.</a></p>
    </div>
  </div>

  <div class="row footer">
    <div class="col-md-10 center-block" style="text-align: center;">
      <ul class="footer-info">
        <li>Wprowadzenie</li>
        <li>Cennik</li>
        <li>Aplikacje</li>
        <li>Praca</li>
        <li>Blog</li>
        <li>Developerzy</li>
        <li>O</li>
        <li>Pomoc</li>
        <li>Legalnie</li>
      </ul>
      <span>© Copyright 2017, Tasker, Inc. Wszystkie prawa zastrzeżone. </span>
    </div>
  </div>


  <script src="/javascripts/user/registerController.js"></script>
</body>
</html>